<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ClubActivity">

    <TextView
        android:id="@+id/tvClubname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Club Name"
        android:textColor="@color/black"
        android:background="#3DCC55"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tvClubtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvClubname"
        android:textStyle="italic"
        android:text="Club Type"
        android:textColorHighlight="@color/purple_200"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"

        android:textSize="20sp"
        />



         <ImageView

             android:layout_width="200dp"
             android:layout_height="200dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tvClubtype"
             android:layout_marginTop="20dp"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="20dp"
             android:src="@drawable/club1"
             android:id="@+id/ivimage"

             >

         </ImageView>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:text="Club Address"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintStart_toStartOf="@+id/tvClubtype"
        app:layout_constraintTop_toBottomOf="@+id/tvClubname" />

        <TextView
        android:id="@+id/tvTonightEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivimage"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:text="Club Tonight Events"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>